+	$function = 'plugin_' . $plugin . '_version';
+	if (function_exists($function)){
+		$info = $function();
+		$name = $info['longname'];
+		if (isset($info['homepage'])) {
+			$webpage = $info['homepage'];
+		}elseif (isset($info['webpage'])) {
+			$webpage = $info['webpage'];
